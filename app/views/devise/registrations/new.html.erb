<center style = "margin-top: 50px;">
  <img src = "/assets/logo.png" class = "img-devise-logo">
  
  <div class = "devise-container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="field">
        <small><%= f.label :email %></small><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Insira seu e-mail" %>
      </div>
    
      <div class="field">
        <small>Senha</small><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Insira uma senha" %>
      </div>
    
      <div class="field">
        <small>Confirme sua senha</small><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirme sua senha" %>
      </div>
    
      <div class="actions">
        <%= f.submit "Cadastrar", class: "btn btn-success", style: "margin-top: 15px" %>
      </div>
    <% end %>
    
    <hr>
    <%= render "devise/shared/links" %>
  </div>
</center>